# Porta do servidor Express
PORT=4000

# URL permitida para CORS (frontend)
FRONTEND_URL=http://localhost:5173
# Outras origens permitidas separadas por vírgula (opcional)
# CORS_ORIGINS=http://localhost:5173,https://meuapp.domain.com

# Credenciais do GitHub OAuth (exemplo)
GITHUB_CLIENT_ID=example_client_id
GITHUB_CLIENT_SECRET=example_client_secret
GITHUB_CALLBACK_URL=http://localhost:4000/api/callback

# Configuração do Postgres (dados de exemplo)
PGHOST=localhost
PGPORT=5432
PGDATABASE=banco_example
PGUSER=user_example
PGPASSWORD=example_password

# URL alternativa (ex: Railway/Render/Supabase) - exemplo
# DATABASE_URL=postgres://user:password@host:5432/dbname?sslmode=require
# DB_SSL=true
# DB_POOL_MAX=5

# Chave de sessão (troque por uma chave forte em produção)
SESSION_SECRET=change-me-to-a-strong-secret
